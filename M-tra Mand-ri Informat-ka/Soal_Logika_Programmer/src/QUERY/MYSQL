soal 4a
SELECT * FROM Barang
WHERE HARGA_SATUAN > 10000
ORDER BY HARGA_SATUAN;

soal 4b
SELECT * FROM Pelanggan
WHERE NAMA LIKE '%g%'AND ALAMAT='BANDUNG';

soal 4c
SELECT
  T.KODE,
  T.TANGGAL,
  P.NAMA AS NAMA PELANGGAN,
  B.NAMA AS NAMA BARANG,
  T.JUMLAH_BARANG AS JUMLAH,
  B.HARGA_SATUAN AS HARGA SATUAN,
  (T.JUMLAH_BARANG * B.HARGA_SATUAN) AS TOTAL
FROM Transaksi AS T
JOIN Barang AS B
  ON T.KODE_BARANG = B.KODE
JOIN Pelanggan AS P
  ON T.KODE_PELANGGAN = P.KODE;


soal 4d
SELECT
  P.NAMA AS NAMA PELANGGAN,
  SUM(T.JUMLAH_BARANG) AS JUMLAH,
  SUM(T.JUMLAH_BARANG * B.HARGA_SATUAN) AS TOTAL HARGA
FROM Transaksi AS T
JOIN Barang AS B
  ON T.KODE_BARANG = B.KODE
JOIN Pelanggan AS P
  ON T.KODE_PELANGGAN = P.KODE;
GROUP BY NAMA PELANGGAN;
